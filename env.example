# Host de la base de datos MySQL
DB_HOST=localhost

# Usuario de la base de datos
DB_USER=root

# Contraseña de la base de datos (REQUERIDA - no puede estar vacía)
DB_PASSWORD=tu_password_aqui

# Nombre de la base de datos
DB_NAME=seller_evaluation

# ===== CONFIGURACIÓN BIGCENTER DATABASE (OPCIONAL) =====
# Si no se configuran estas variables, solo se usará la BD principal
# Host de la base de datos BigCenter MySQL
# BIGCENTER_DB_HOST=localhost

# Usuario de la base de datos BigCenter
# BIGCENTER_DB_USER=root

# Contraseña de la base de datos BigCenter
# BIGCENTER_DB_PASSWORD=tu_password_bigcenter_aqui

# Nombre de la base de datos BigCenter
# BIGCENTER_DB_NAME=bigcenter_evaluation

# ===== CONFIGURACIÓN DEL SERVIDOR =====
# Puerto del servidor (Railway lo asigna automáticamente)
PORT=3005

# Entorno de ejecución (development, production)
NODE_ENV=development

# ===== CONFIGURACIÓN DE SEGURIDAD =====
# Clave secreta para sesiones (CAMBIAR EN PRODUCCIÓN)
SESSION_SECRET=clavemuymuysecretayaleatoria

# ===== CONFIGURACIÓN DE CORS =====
# URL del frontend (solo para producción)
# FRONTEND_URL=https://tu-app.railway.app

# URL automática de Railway (se configura automáticamente)
# RAILWAY_STATIC_URL=https://tu-proyecto-production.railway.app
